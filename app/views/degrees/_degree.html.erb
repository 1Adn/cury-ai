<div class="step2-infos-details">
 <div class="accordion" id="accordionDegrees">
    <% if @profile.degrees.present? %>
      <% @profile.degrees.each_with_index do |degree, index| %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= index %>">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
              <%= degree.title %>
            </button>
          </h2>
          <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#accordionDegrees">
            <div class="accordion-body">
              <strong>Your Degree level</strong> <%= degree.level %><br>
              <strong>Your Degree Field</strong> <%= degree.field %><br>
              <strong>Your Degree's school</strong> <%= degree.school %><br>
               <!-- Button trigger modal -->
              <div class="delete-button-container">
                <button type="button" data-controller="delete" data-action="click->delete#delete" data-delete-url-value="<%= degree_path(degree) %>" class="icon-button-delete">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div>No degrees</div>
    <% end %>
  </div>
</div>
